---
import BaseLayout from "../../layouts/BaseLayout.astro";
const allMarkdowns = await Astro.glob('../posts/*.md')
const tags = [...new Set(allMarkdowns.map(markdown => markdown.frontmatter.tags).flat())]
const title= "Tag Index"
---
<style>
  a {
      color: : #00539f;
    }
  .tags {
      display: flex;
      flex-wrap: wrap;
      margin: 0 auto;
    }
  .tag {
      margin: 0.25em;
      border: dotted 1px #a1a1a1;
      border-radius: .5em;
      padding: .5em 1em;
      font-size: 1.15em;
      background-color: #f8fcfd;
    }
</style>
<BaseLayout titlepage={title}>
  <div class="tags">
    {tags.map(tag => (
      <p class="tag">
        <a href={`/tags/${tag}`}>
          {tag}
        </a>
      </p>
    ))}
  </div>
</BaseLayout>
